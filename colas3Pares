#include <iostream>
#include <stack>
#include <queue>
using namespace std;

// Función ubicando los elementos pares de una pila en una cola
queue<int> ponerParesEnCola(stack<int> pila) {
    stack<int> NumerosNoPares;
    queue<int> Numerospares;

    // Mientras la pila no esté vacía
    while (!pila.empty()) {
        int elemento = pila.top();
        pila.pop();
        if (elemento % 2 == 0) {
            // Si elemento es par, se agrega a la cola de elementos pares
            Numerospares.push(elemento);
        } else {
            // Si elemento es impar, se agregara a la pila de elementos no pares
            NumerosNoPares.push(elemento);
        }
    }

    // Devolver la cola(elementos pares)
    return Numerospares;
}

int main() {
    stack<int> pila;
    pila.push(1);
    pila.push(2);
    pila.push(3);
    pila.push(4);
    pila.push(5);
    pila.push(6);

    // ubicando los elementos que son pares de la pila en una cola
    queue<int> NumerosPares = ponerParesEnCola(pila);

    // Imprimir elementos que son pares en la cola
    cout << "Elementos pares de la cola: ";
    while (!NumerosPares.empty()) {
        cout << NumerosPares.front() << " ";
        NumerosPares.pop();
    }
    cout << endl;

    return 0;
}
