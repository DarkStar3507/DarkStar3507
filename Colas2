#include <iostream>
#include <queue>
using namespace std;

// Definir la clase Cola
class Cola {
    private:
        queue<int> elementos;  //(usando una queue de la librería estándar de C++)
    public:
        // Métodos del TAD Cola
        void encolar(int elemento) {
            elementos.push(elemento);
        }
        void desencolar() {
            elementos.pop();
        }
        int frente() {
            return elementos.front();
        }
        bool vacia() {
            return elementos.empty();
        }
};

// Función para clon de una cola
Cola clonarCola(Cola original) {
    Cola clon;

    // Copiando elementos de la cola original a la nueva cola
    while (!original.vacia()) {
        clon.encolar(original.frente());
        original.desencolar();
    }

    // se devuelve la nueva cola como resultado
    return clon;
}

// numeros de ejemplo 
int main() {
    Cola original;
    original.encolar(51);
    original.encolar(52);
    original.encolar(53);

    //copia de la cola original
    Cola clon = clonarCola(original);

    // Imprimiendo tanto cola original y la del clon
    cout << "Cola original: ";
    while (!original.vacia()) {
        cout << original.frente() << " ";
        original.desencolar();
    }
    cout << endl;

    cout << "Clon de la cola: ";
    while (!clon.vacia()) {
        cout << clon.frente() << " ";
        clon.desencolar();
    }
    cout << endl;

    return 0;
}
