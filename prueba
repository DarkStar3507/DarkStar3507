void agregarPila(Nodo * &pila, int n){
	Nodo * nuevo_nodo = new Nodo(); //1) crear espacio en memoria para un nuevo nodo
	nuevo_nodo ->dato=n;  //2) rellenar el dato
	nuevo_nodo->siguiente = pila; //3) rellenar el puntero que se debe igualar a pila
	pila = nuevo_nodo;
}
