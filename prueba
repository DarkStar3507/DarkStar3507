struct Nodo{ //estructura Nodo
	int dato;
	Nodo *siguiente;
};

void agregarPila(Nodo * &, int ){ //prototipo

int main(){

    Nodo*pila = NULL;
    int n1, n2;
    cout<<"Digite un numero: ";
    cin>>n1;
    agregarPila(pila,n1)
    
    getch();
    return 0;
