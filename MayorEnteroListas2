#include <iostream>

struct ListaNodo {
    int valor;
    ListaNodo* siguiente;
    ListaNodo(int x) : valor(x), siguiente(NULL) {}
};

int maxnodo(ListaNodo* cabeza) {
    int max_valor = cabeza ->valor;
    while (cabeza != NULL) {
        if (cabeza->valor > max_valor) {
            max_valor = cabeza->valor;
        }
        cabeza = cabeza->siguiente;
    }
    return max_valor;
}

int main() {
    ListaNodo* cabeza = new ListaNodo(1);
    cabeza->siguiente = new ListaNodo(15);
    cabeza->siguiente->siguiente = new ListaNodo(7);
    cabeza->siguiente->siguiente->siguiente = new ListaNodo(4);

    std::cout << "El mayor entero de la lista enlazada es: " << maxnodo(cabeza) << std::endl;

    return 0;
}
